<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/margin_horizontal</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/sourcesanspro_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerRadius">@dimen/button_radius</item>
    </style>

    <style name="CustomButton.Purple">
        <item name="android:backgroundTint">@color/button_purple_background_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomButton.PurpleDark">
        <item name="android:backgroundTint">@color/button_purple_dark_background_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:elevation">1dp</item>
        <item name="titleTextColor">@color/blue_dark</item>
        <item name="titleTextAppearance">@style/CustomToolbarTitle</item>
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
    </style>

    <style name="CustomToolbarTitle" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/merriweather_regular</item>
        <item name="android:textSize">@dimen/toolbar_text_size</item>
    </style>

    <style name="CustomTextInputEditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/editText_margin_bottom</item>
        <item name="android:textColorHint">@color/gray_dark</item>
        <item name="hintTextColor">@color/gray_dark</item>
        <item name="boxBackgroundColor">@null</item>
    </style>

    <style name="CustomTextInputEditText.LightGray">
        <item name="boxBackgroundColor">@color/gray_light</item>
    </style>

    <style name="CustomTextInputLayout.LightGray">
        <item name="android:textColorHint">@color/purple_dark</item>
        <item name="hintTextColor">@color/purple_dark</item>
        <item name="boxBackgroundColor">@color/gray_light</item>
    </style>

    <style name="CustomTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/sourcesanspro_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomTextView.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomTextView.BlueDark">
        <item name="android:textColor">@color/blue_dark</item>
    </style>

    <style name="TitleTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/merriweather_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TitleTextView.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TitleTextView.Purple">
        <item name="android:textColor">@color/purple</item>
    </style>

    <style name="TitleTextView.BlueDark">
        <item name="android:textColor">@color/blue_dark</item>
    </style>

    <style name="TitleTextView.Regular">
        <item name="android:fontFamily">@font/merriweather_regular</item>
    </style>
</resources>